
<table class = "table table-hover">
      <thead>
      </thead>
      <tbody>
        <tr><td class="font-weight-bold">タイトル</td><td><%= @game_title.name %></td></tr>
        <tr><td class="font-weight-bold">ジャンル名</td><td><%= @game_title.genre.name %></td></tr>
      </tbody>
    </table>
<table class = "table table-hover">
      <thead>
        <tr>
          <th>項目</th>
          <th>PC性能</th>
          <th>推奨スペック</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
         <% @computers.each do |computer| %>
        <tr><td class="font-weight-bold">PC名</td><td><%= computer.name %></td><td></td></tr>
        <tr><td>要求CPU性能(S)</td><td><%= computer.cpu_list.single_score %></td><td><%= @game_title.cpu_list.single_score %></td></tr>
        <tr><td>要求CPU性能(M)</td><td><%= computer.cpu_list.multiscore %></td><td><%= @game_title.cpu_list.multiscore %></td></tr>
        <tr><td>要求GPU性能</td><td><%= computer.gpu_list.score %></td><td><%= @game_title.gpu_list.score %></td></tr>
        <tr><td>必要OSバージョン</td><td><%= computer.system.name %> <%= computer.system.bit_type %>bit</td><td><%= @game_title.system.name %> <%= @game_title.system.bit_type %>bit</td></tr>
        <tr><td>要求メモリ量(GB)</td><td><%= computer.memory_capacity %></td><td><%= @game_title.recommended_memory %></td></tr>
        <tr><td>要求ストレージ(GB)</td><td><%= computer.free_storage %></td><td><%= @game_title.request_storage %></td></tr>
        <tr><td colspan="3"></td></tr>
        <% end %>
      </tbody>
    </table>
