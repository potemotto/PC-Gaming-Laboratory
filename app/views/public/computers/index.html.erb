<div class="row">
  <div class="col-md-8 offset-md-2">
<h1>PC情報一覧・登録画面ページ</h1>
<%= link_to "My PC追加", new_computer_path,class: "btn btn-secondary" %>
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>PC名</th>
          <th>更新日時</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @computers.each do |computer| %>
        <tr>
          <td><%= computer.name %></td>
          <td><%= computer.updated_at %></td>
          <td><%= link_to "詳細", computer_path(computer.id) ,class: "btn btn-primary" %></td>
          <td><%= link_to "編集", edit_computer_path(computer.id) ,class: "btn btn-success" %></td>
          <td><%= link_to "削除", computer_path(computer.id) ,method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
