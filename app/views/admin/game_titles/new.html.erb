<div class="row">
  <div class="col-md-8 offset-md-2">
<h1>ゲームタイトル登録ページ</h1>


  <table class = "table">
  <thead>
  </thead>
  <tbody>
    <%= form_with model: @game_title, url: admin_game_titles_path do |f| %>
      <tr><td>
      タイトル名
      </td><td>
      <%= f.text_field :name %>
      </td></tr>

      <tr><td>
      ゲームジャンル
      </td><td>
      <%= f.select :genre_id, Genre.all.map{ |genre| [genre.name, genre.id]} %>
      </td></tr>

      <tr><td>
      要求CPU性能
      </td><td>
      <%= f.select :cpu_list_id, CpuList.all.map{ |cpu| [cpu.name,cpu.id]} %>
      </td></tr>

      <tr><td>
      要求GPU性能
      </td><td>
      <%= f.select :gpu_list_id, GpuList.all.map{ |gpu| [gpu.name,gpu.id]} %>
      </td></tr>

      <tr><td>
      必要OSバージョン
      </td><td>
      <%= f.select :system_id, System.all.map{ |system| [system.name,system.id]} %>
      </td></tr>

      <tr><td>
      要求メモリ量(GB)
      </td><td>
      <%= f.text_field :recommended_memory %>
      </td></tr>

      <tr><td>
      要求ストレージ(GB)
      </td><td>
      <%= f.text_field :request_storage %>
      </td></tr>

      </tbody>
    </table>
    <%= f.submit "新規登録" ,class: "btn btn-primary" %>
    <% end %>
  </div>
</div>