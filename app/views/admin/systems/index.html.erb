<div class="row">
  <div class="col-md-8 offset-md-2">
<h1>OS情報一覧ページ</h1>
<%= link_to "OS登録ページ", new_admin_system_path, class: "btn btn-info" %>

    <table class = "table table-hover">
      <thead>
        <tr>
          <th>OS名称</th>
          <th>ビット数</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @systems.each do |system| %>
        <tr>
          <td><%= system.name %></td>
          <td><%= system.bit_type %>bit</td>
          <td><%= link_to "詳細", admin_system_path(system.id) , class: "btn btn-primary" %></td>
          <td><%= link_to "編集", edit_admin_system_path(system.id) , class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>