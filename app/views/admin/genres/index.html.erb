<div class="row">
  <div class="col-md-8 offset-md-2">
<%= link_to "記事タイプ一覧ページ", admin_types_path, class: "btn btn-info" %>
<h1>ゲームジャンル一覧ページ</h1>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <b>ゲームジャンル登録</b>
  <%= f.text_field :name %>
  <%= f.submit "新規登録",class: "btn btn-primary" %>
<% end %>


    <table class = "table table-hover">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集", edit_admin_genre_path(genre.id) ,class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>